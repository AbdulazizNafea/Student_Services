<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="false"
    android:background="@drawable/homepage"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="88dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/b1"
                    android:layout_width="167dp"
                    android:layout_height="140dp"
                    android:background="@drawable/service"
                    android:gravity="center"
                    android:paddingTop="70dp"
                    android:text="الخدمات الذاتية"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b3"
                    android:layout_width="167dp"
                    android:layout_height="140dp"
                    android:background="@drawable/tvtc"
                    android:gravity="center"
                    android:paddingTop="70dp"
                    android:text="موقع الكلية التقنية"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b6"
                    android:layout_width="167dp"
                    android:layout_height="140dp"
                    android:background="@drawable/twitter"
                    android:gravity="center"
                    android:paddingTop="70dp"
                    android:text="حساب الكلية على تويتر"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/b2"
                    android:layout_width="167dp"
                    android:layout_height="140dp"
                    android:background="@drawable/rayat"
                    android:gravity="center"
                    android:paddingTop="70dp"
                    android:text="موقع رايات"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b4"
                    android:layout_width="167dp"
                    android:layout_height="140dp"
                    android:background="@drawable/bb"
                    android:gravity="center"
                    android:paddingTop="70dp"
                    android:text="موقع البلاك بورد"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/b5"
                    android:layout_width="167dp"
                    android:layout_height="140dp"
                    android:background="@drawable/about_college"
                    android:gravity="center"
                    android:paddingTop="70dp"
                    android:text="عن الكلية"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>

